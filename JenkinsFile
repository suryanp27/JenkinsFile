pipeline {
    agent any
    environment {
        PATH = "/opt/maven/bin:$PATH"
    }
    stages {
        stage('clone the code form github') {
            steps {
                git 'https://github.com/suryanp27/hello-world.git'
            }
        }
        stage('build the code') {
            steps {
                sh "mvn clean install package" 
            }
        }
    }
}

